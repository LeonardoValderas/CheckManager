<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:id="@+id/linearDataReceiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_rect_linear"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margim_receiver_linear"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textReceiverNumberTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margim_receiver"
                    android:text="NÃºmero: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textReceiverNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margim_receiver"
                    android:text="11111111" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textReceiverAmountTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margim_receiver"
                    android:text="Monto: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textReceiverAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margim_receiver"
                    android:text="1500" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margim_receiver_linear"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textReceiverExpirateTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margim_receiver"
                        android:text="Vencimiento: "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textReceiverExpirate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margim_receiver"
                        android:text="27/05/2016" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textReceiverOriginTitle"
                        android:layout_margin="@dimen/margim_receiver"
                        android:text="Recibido de : "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textReceiverOrigin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/textReceiverOrigin"
                        android:layout_below="@+id/textReceiverExpirate"
                        android:layout_margin="@dimen/margim_receiver"
                        android:text="Juan Perez" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgReceiver"
                    android:layout_width="@dimen/image_receiver_list"
                    android:layout_height="@dimen/image_receiver_list"
                    android:layout_below="@+id/linearDataReceiver"
                    android:src="@android:drawable/ic_menu_camera" />

                <ImageButton
                    android:id="@+id/imgEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margim_receiver"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/row_icons_padding"
                    android:src="@android:drawable/ic_menu_edit"
                    android:tint="@android:color/darker_gray" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="1dp"-->
    <!--android:layout_below="@+id/linearDataReceiver"-->
    <!--android:background="@color/colorPrimaryDark" />-->
</RelativeLayout>
