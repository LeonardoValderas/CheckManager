<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin_row"
    android:layout_marginRight="@dimen/activity_horizontal_margin_row"
    android:layout_marginTop="@dimen/activity_horizontal_margin_row_top_buttom">

    <!--lineal main-->
    <LinearLayout
        android:id="@+id/linearConteinerData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--typeCheck-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textTypeCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cheque de tercero "
                android:textStyle="bold" />

        </LinearLayout>

        <!--lineal central, photo plus datas-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--linear photo-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imageCheckPhoto"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@android:drawable/ic_menu_camera"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="1dp" />
            </LinearLayout>

            <!--linear datas-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <!--linear number y amount-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textNumberTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margim_cargar_list_item"
                            android:text="NÃºmero: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margim_cargar_list_item"
                            android:text="11111111" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textAmountTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margim_cargar_list_item"
                            android:text="Monto: "
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margim_cargar_list_item"
                            android:text="1500" />
                    </LinearLayout>
                </LinearLayout>
                <!--linear maturities + origin + edit Button-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--linear maturities + origin-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <!--linear Maturities-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textExpirateTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margim_cargar_list_item"
                                android:text="Vencimiento: "
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textExpirate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margim_cargar_list_item"
                                android:text="27/05/2016" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearDestiny"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/textTitleOrigin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margim_cargar_list_item"
                                android:text="Recibido de : "
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textOrigin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margim_cargar_list_item"
                                android:text="Juan Perez" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>
                <!--linear edit Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!--linear destiny + destinydate-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!--linear destiny-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textTitleDestiny"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margim_cargar_list_item"
                                android:text="Entregado a : "
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textDestiny"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margim_cargar_list_item"
                                android:text="Juan Pardo" />

                        </LinearLayout>

                        <!--linear destiny date-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textTitleDestinyDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margim_cargar_list_item"
                                android:text="Fecha de entrega: "
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textDestinyDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margim_cargar_list_item"
                                android:text="02-08-2016" />
                        </LinearLayout>
                    </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="6">

                            <ImageButton
                                android:id="@+id/imgButtonEdit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margim_cargar_list_item"
                                android:background="@android:color/transparent"
                                android:src="@android:drawable/ic_menu_edit"
                                android:tint="@android:color/darker_gray" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorAccent" />
    </LinearLayout>

</RelativeLayout>
